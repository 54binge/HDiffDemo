<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_select_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="选择 old apk"/>

    <TextView
        android:id="@+id/old_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="old apk info"/>

    <Button
        android:id="@+id/btn_select_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="选择 new apk"/>

    <TextView
        android:id="@+id/new_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="new apk info"/>

    <Button
        android:id="@+id/get_patch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="生成patch"/>

    <Button
        android:id="@+id/get_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="合成 new apk"/>

    <TextView
        android:id="@+id/gen_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="gen apk info"/>
</LinearLayout>
